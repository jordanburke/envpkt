{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "envpkt",
  "title": "envpkt configuration",
  "description": "Credential lifecycle and fleet management configuration for AI agents",
  "type": "object",
  "required": ["version", "meta"],
  "properties": {
    "version": {
      "description": "Schema version number",
      "default": 1,
      "type": "number"
    },
    "agent": {
      "description": "Identity and capabilities of the AI agent using this envpkt",
      "type": "object",
      "required": ["name"],
      "properties": {
        "name": {
          "description": "Agent display name",
          "type": "string"
        },
        "role": {
          "description": "Agent role or function",
          "type": "string"
        },
        "capabilities": {
          "description": "List of capabilities this agent provides",
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "expires": {
          "format": "date",
          "description": "Agent credential expiration date (YYYY-MM-DD)",
          "type": "string"
        }
      }
    },
    "meta": {
      "description": "Per-secret metadata keyed by secret name",
      "type": "object",
      "patternProperties": {
        "^(.*)$": {
          "description": "Metadata about a single secret â€” answers What/Where/Why/When/How",
          "type": "object",
          "required": ["service"],
          "properties": {
            "service": {
              "description": "Service or system this secret authenticates to",
              "type": "string"
            },
            "consumer": {
              "description": "Classification of the secret's consumer service",
              "anyOf": [
                {
                  "const": "api",
                  "type": "string"
                },
                {
                  "const": "database",
                  "type": "string"
                },
                {
                  "const": "saas",
                  "type": "string"
                },
                {
                  "const": "infra",
                  "type": "string"
                },
                {
                  "const": "other",
                  "type": "string"
                }
              ]
            },
            "env_var": {
              "description": "Environment variable name where the secret is injected",
              "type": "string"
            },
            "vault_path": {
              "description": "Path in secret manager (e.g. vault, fnox)",
              "type": "string"
            },
            "purpose": {
              "description": "Why this secret exists and what it enables",
              "type": "string"
            },
            "capabilities": {
              "description": "What operations this secret grants (e.g. read, write, admin)",
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "created": {
              "format": "date",
              "description": "Date the secret was provisioned (YYYY-MM-DD)",
              "type": "string"
            },
            "expires": {
              "format": "date",
              "description": "Date the secret expires (YYYY-MM-DD)",
              "type": "string"
            },
            "rotation_url": {
              "format": "uri",
              "description": "URL or reference for secret rotation procedure",
              "type": "string"
            },
            "provisioner": {
              "description": "How this secret is provisioned",
              "anyOf": [
                {
                  "const": "manual",
                  "type": "string"
                },
                {
                  "const": "fnox",
                  "type": "string"
                },
                {
                  "const": "vault",
                  "type": "string"
                },
                {
                  "const": "ci",
                  "type": "string"
                }
              ]
            },
            "tags": {
              "description": "Freeform tags for grouping and filtering",
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "lifecycle": {
      "description": "Policy configuration for credential lifecycle management",
      "type": "object",
      "properties": {
        "warn_before_days": {
          "default": 30,
          "description": "Days before expiration to trigger warnings",
          "type": "number"
        },
        "stale_after_days": {
          "default": 365,
          "description": "Days since creation to consider a secret stale",
          "type": "number"
        },
        "require_rotation_url": {
          "default": false,
          "description": "Require rotation_url on all secrets",
          "type": "boolean"
        },
        "require_purpose": {
          "default": false,
          "description": "Require purpose on all secrets",
          "type": "boolean"
        }
      }
    },
    "callbacks": {
      "description": "Automation callbacks for lifecycle events",
      "type": "object",
      "properties": {
        "on_expiring": {
          "description": "Command or webhook to invoke when secrets are expiring",
          "type": "string"
        },
        "on_expired": {
          "description": "Command or webhook to invoke when secrets have expired",
          "type": "string"
        },
        "on_audit_fail": {
          "description": "Command or webhook on audit failure",
          "type": "string"
        }
      }
    },
    "tools": {
      "description": "Tool integration toggles",
      "type": "object",
      "properties": {
        "fnox": {
          "default": true,
          "description": "Enable fnox integration",
          "type": "boolean"
        },
        "mcp": {
          "default": true,
          "description": "Enable MCP server capabilities",
          "type": "boolean"
        }
      }
    }
  }
}
